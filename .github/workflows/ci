name: CI - Lint & Tests

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  test-lint:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pytest flake8 black

    - name: Lint code
      run: |
        flake8 . || true  # bricht Workflow nicht ab
        black --check . || true  # optional, prüft Format ohne zu ändern

    - name: Run tests
      run: |
        pytest
